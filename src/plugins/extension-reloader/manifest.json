{
  "name": "Extension Reloader",
  "description": "Reload development unpacked extensions using the toolbar button",
  "manifest_version": 3,
  "version": "1.0",
  "icons": {
    "16": "/icons/favicon16.png",
    "32": "/icons/favicon32.png",
    "48": "/icons/favicon48.png",
    "128": "/icons/favicon128.png"
  },
  "action": {
    "default_title": "Reload extensions"
  },
  "permissions": [
    "management",
    "background",
    "storage",
    "webRequest"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
