{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "verbatimModuleSyntax": true,
    "paths": {
      "@shared/*": [
        "src/shared/*"
      ]
    },
    "lib": [
      "DOM",
      "ESNext"
    ],
    "types": [
      "vite/client",
      "@types/chrome"
    ]
  },
  "include": [
    "src",
    "scripts"
  ],
  "references": [
    {
      "path": "./tsconfig.vite.json"
    }
  ]
}
